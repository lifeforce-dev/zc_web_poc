      "AvailableElementalsResponse": {
        "properties": {
          "elementals": {
            "items": {
              "$ref": "#/components/schemas/AvailableElemental"
            },
            "type": "array",
            "title": "Elementals",
            "description": "Available elementals"
          }
        },
        "type": "object",
        "required": [
          "elementals"
        ],
        "title": "AvailableElementalsResponse",
        "description": "Response containing elementals available for selection."
      },
      "DisplayDataResponse": {
        "properties": {
          "icon_url": {
            "type": "string",
            "title": "Icon Url",
            "description": "Full URL to icon asset"
          }
        },
        "type": "object",
        "required": [
          "icon_url"
        ],
        "title": "DisplayDataResponse",
        "description": "Presentation data with resolved URLs for client consumption."
