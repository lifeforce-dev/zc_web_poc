      "AvailableElemental": {
        "properties": {
          "id": {
            "type": "string",
            "title": "Id",
            "description": "Unique elemental identifier"
          },
          "name": {
            "type": "string",
            "title": "Name",
            "description": "Display name"
          },
          "description": {
            "type": "string",
            "title": "Description",
            "description": "Flavor text"
          },
          "color": {
            "type": "string",
            "title": "Color",
            "description": "Theme color (hex)"
          },
          "primary_ability_id": {
            "type": "string",
            "title": "Primary Ability Id",
            "description": "ID of primary ability"
          },
          "display_data": {
            "$ref": "#/components/schemas/DisplayDataResponse",
            "description": "Presentation assets with resolved URLs"
          }
