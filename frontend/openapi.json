              "$ref": "#/components/schemas/AvailableAbility"
            },
            "type": "array",
            "title": "Abilities",
            "description": "Available abilities"
          }
        },
        "type": "object",
        "required": [
          "abilities"
        ],
        "title": "AvailableAbilitiesResponse",
        "description": "Response containing abilities available in game."
      },
      "AvailableAbility": {
        "properties": {
          "id": {
            "type": "string",
            "title": "Id",
            "description": "Unique ability identifier"
          },
          "name": {
            "type": "string",
            "title": "Name",
            "description": "Display name"
          },
          "description": {
            "type": "string",
            "title": "Description",
            "description": "What the ability does"
          },
          "display_data": {
            "$ref": "#/components/schemas/DisplayDataResponse",
            "description": "Presentation assets with resolved URLs"
          },
          "can_target_friendly": {
            "type": "boolean",
            "title": "Can Target Friendly",
            "description": "Can target own blocks"
          },
          "cooldown_turns": {
            "type": "integer",
            "title": "Cooldown Turns",
            "description": "Turns before reuse"
          }
